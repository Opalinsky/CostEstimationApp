@model IEnumerable<CostEstimationApp.Models.SemiFinishedProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Materials" asp-action="Index">>>> Materiały >>></a>
    </li>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DimensionX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DimensionY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DimensionZ)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Volume) *@      
            Objętość [mm^3]
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Price) *@
            Koszt [pln]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DimensionX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DimensionY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DimensionZ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
