@model IEnumerable<CostEstimationApp.Models.Machine>

@{
    ViewData["Title"] = "Machines";
}

<h1>Machines</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.CostPerHour)</th>
            <th>@Html.DisplayNameFor(model => model.MachineType.Typeof)</th>
            <th>Operation Types</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.CostPerHour)</td>
                <td>@Html.DisplayFor(modelItem => item.MachineType.Typeof)</td>
                <td>
                    @foreach (var operationType in item.OperationTypes)
                    {
                        @operationType.Name <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
