@model IEnumerable<CostEstimationApp.Models.OperationSet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Projekt.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Operations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().MachineCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ToolCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().WorkerCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().TotalCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Projekt.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @string.Join(", ", item.Operations.Select(ot => ot.Name))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MachineCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToolCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkerCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Select" asp-route-id="@item.Id">Wybierz</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Projekts" asp-action="Index">Powrót</a>
