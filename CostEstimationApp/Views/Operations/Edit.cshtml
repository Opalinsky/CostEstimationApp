@model CostEstimationApp.Models.Operation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Operation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FeatureId" class="control-label"></label>
                <select asp-for="FeatureId" class="form-control" asp-items="ViewBag.FeatureId"></select>
                <span asp-validation-for="FeatureId" class="text-danger"></span>
                <button type="button" id="accept-feature" class="btn btn-primary">Zaakceptuj</button>
            </div>
            <div class="form-group">
                <label asp-for="OperationTypeId" class="control-label">Operation Type</label>
                <select asp-for="OperationTypeId" class="form-control" id="operationTypeId"></select>
                <span asp-validation-for="OperationTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MachineId" class="control-label">Machine</label>
                <select asp-for="MachineId" class="form-control" id="machineId"></select>
                <span asp-validation-for="MachineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkerId" class="control-label"></label>
                <select asp-for="WorkerId" class="form-control" asp-items="ViewBag.WorkerId"></select>
                <span asp-validation-for="WorkerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToolId" class="control-label"></label>
                <select asp-for="ToolId" class="form-control" asp-items="ViewBag.ToolId"></select>
                <span asp-validation-for="ToolId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MRRId" class="control-label"></label>
                <select asp-for="MRRId" class="form-control" asp-items="ViewBag.MRRId"></select>
                <span asp-validation-for="MRRId" class="text-danger"></span>
            </div>
            <!-- Additional fields for operation details -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("accept-feature").addEventListener("click", function () {
            var featureId = document.getElementById("FeatureId").value;
            if (featureId) {
                $.ajax({
                    url: '@Url.Action("GetOperationsAndMachinesByFeature")',
                    type: 'POST',
                    data: { featureId: featureId },
                    success: function (data) {
                        var operationTypeSelect = document.getElementById("operationTypeId");
                        var machineSelect = document.getElementById("machineId");

                        operationTypeSelect.innerHTML = '';
                        machineSelect.innerHTML = '';

                        data.operationTypes.forEach(function (operationType) {
                            var option = document.createElement("option");
                            option.value = operationType.id;
                            option.text = operationType.name;
                            operationTypeSelect.appendChild(option);
                        });

                        data.machines.forEach(function (machine) {
                            var option = document.createElement("option");
                            option.value = machine.id;
                            option.text = machine.name;
                            machineSelect.appendChild(option);
                        });
                    }
                });
            }
        });
    </script>
}
