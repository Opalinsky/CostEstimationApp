@model CostEstimationApp.Models.Operation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Operation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SemiFinishedProductId" class="control-label"></label>
                <select asp-for="SemiFinishedProductId" class ="form-control" asp-items="ViewBag.SemiFinishedProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MachineId" class="control-label"></label>
                <select asp-for="MachineId" class ="form-control" asp-items="ViewBag.MachineId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkerId" class="control-label"></label>
                <select asp-for="WorkerId" class ="form-control" asp-items="ViewBag.WorkerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ToolId" class="control-label"></label>
                <select asp-for="ToolId" class ="form-control" asp-items="ViewBag.ToolId"></select>
            </div>
            @*<div class="form-group">
                <label asp-for="OperationType" class="control-label"></label>
                <input asp-for="OperationType" class="form-control" />
                <span asp-validation-for="OperationType" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="MRRId" class="control-label"></label>
                <select asp-for="MRRId" class ="form-control" asp-items="ViewBag.MRRId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OperationType" class="control-label">Operation Type</label><br />
                <input type="radio" id="Cutting" name="OperationType" value="Cutting" />
                <label for="Cutting">Cutting</label><br />
                <input type="radio" id="Drilling" name="OperationType" value="Drilling" />
                <label for="Drilling">Drilling</label>
            </div>
            <div id="cutting-fields" style="display:none;">
                <div class="form-group">
                    <label for="CuttingLength" class="control-label">Cutting Length</label>
                    <input type="number" class="form-control" id="CuttingLength" name="CuttingLength" />
                </div>
                <div class="form-group">
                    <label for="CuttingWidth" class="control-label">Cutting Width</label>
                    <input type="number" class="form-control" id="CuttingWidth" name="CuttingWidth" />
                </div>
                <div class="form-group">
                    <label for="CuttingDepth" class="control-label">Cutting Depth</label>
                    <input type="number" class="form-control" id="CuttingDepth" name="CuttingDepth" />
                </div>
            </div>
            <div id="drilling-fields" style="display:none;">
                <div class="form-group">
                    <label for="DrillDiameter" class="control-label">Drill Diameter</label>
                    <input type="number" class="form-control" id="DrillDiameter" name="DrillDiameter" />
                </div>
                <div class="form-group">
                    <label for="DrillDepth" class="control-label">Drill Depth</label>
                    <input type="number" class="form-control" id="DrillDepth" name="DrillDepth" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LengthBeforeOperation" class="control-label"></label>
                <input asp-for="LengthBeforeOperation" class="form-control" />
                <span asp-validation-for="LengthBeforeOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidthBeforeOperation" class="control-label"></label>
                <input asp-for="WidthBeforeOperation" class="form-control" />
                <span asp-validation-for="WidthBeforeOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeightBeforeOperation" class="control-label"></label>
                <input asp-for="HeightBeforeOperation" class="form-control" />
                <span asp-validation-for="HeightBeforeOperation" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="LengthAfterOperation" class="control-label"></label>
                <input asp-for="LengthAfterOperation" class="form-control" />
                <span asp-validation-for="LengthAfterOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidthAfterOperation" class="control-label"></label>
                <input asp-for="WidthAfterOperation" class="form-control" />
                <span asp-validation-for="WidthAfterOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeightAfterOperation" class="control-label"></label>
                <input asp-for="HeightAfterOperation" class="form-control" />
                <span asp-validation-for="HeightAfterOperation" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelectorAll('input[name="OperationType"]').forEach(function (elem) {
            elem.addEventListener("change", function () {
                var selectedType = this.value;
                if (selectedType === "Cutting") {
                    document.getElementById("cutting-fields").style.display = "block";
                    document.getElementById("drilling-fields").style.display = "none";
                } else if (selectedType === "Drilling") {
                    document.getElementById("cutting-fields").style.display = "none";
                    document.getElementById("drilling-fields").style.display = "block";
                } else {
                    document.getElementById("cutting-fields").style.display = "none";
                    document.getElementById("drilling-fields").style.display = "none";
                }
            });
        });
    </script>
}