@model IEnumerable<CostEstimationApp.Models.Operation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemiFinishedProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MRR)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Feature.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OperationType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SemiFinishedProduct.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Machine.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Worker.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tool.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MRR.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
